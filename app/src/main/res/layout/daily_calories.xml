<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white">

    <!-- Text prompt for calories input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your daily calories:"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textStyle="bold"/>

    <!-- EditText to enter the calories -->
    <EditText
        android:id="@+id/edtCalories"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textView"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Enter calories"
        android:textColor="@color/black"
        android:background="@drawable/edittext_bg"
        android:textSize="16sp"
        android:inputType="number"
        android:padding="10dp"
        android:gravity="center"/>

    <!-- Button to save the calories input -->
    <Button
        android:id="@+id/btnSaveCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Calories"
        android:textColor="@color/white"
        android:layout_below="@id/edtCalories"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"/>

    <!-- TextView to display entered calories -->
    <TextView
        android:id="@+id/txtCaloriesDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories: Not entered"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@id/btnSaveCalories"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
